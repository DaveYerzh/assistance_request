% makes header
\newcommand{\makefinding}[1]{
    \vspace*{-1cm} % get rid of random white space
    \noindent\makebox[\linewidth][c]{%
      \colorbox{CadetBlue}{%
        \parbox[t][0.2\paperheight][c]{\paperwidth}{%
          \hspace*{\dimexpr\hoffset+\oddsidemargin+1in\relax}%
          \begin{minipage}{\textwidth}
          \textcolor{white}
            {\fontsize{40}{50} \selectfont
            \begin{center}
                 \vspace{0.5cm}
                 \nohyphens{#1}
            \end{center}
            \vspace{-1.5cm}
            \begin{flushright}
            {\fontfamily{fos}\selectfont \large \copyright $\,$ умный человек}
            \end{flushright}
            }
          \end{minipage}%
        }%
      }%
    }\par\medskip
}
